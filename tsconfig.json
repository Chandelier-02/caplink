{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext", "WebWorker"],
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "**/test/**", "**/stuff/**"]
}
